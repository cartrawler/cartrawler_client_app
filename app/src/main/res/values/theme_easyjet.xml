<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EasyJetTheme" parent="CTDayNightTheme">
        <item name="colorPrimary">@color/easyJetPrimary</item>
        <item name="colorOnPrimary">@color/ct_white</item>
        <item name="colorPrimaryVariant">@color/easyJetDarkPrimary</item>
        <item name="android:statusBarColor">@color/easyJetDarkPrimary</item>
        <item name="colorSecondary">@color/easyJetPrimary</item>
        <item name="colorOnSecondary">@color/ct_white</item>
        <item name="colorSecondaryVariant">@color/easyJetPrimary</item>
        <item name="android:fontFamily">@font/easyjet_rounded_ff</item>
    </style>

    <style name="EasyJetAppFont" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/easyjet_rounded_ff</item>
    </style>

    <style name="EayJetAppWidgetFont" parent="Widget.Design.TextInputEditText">
        <item name="android:fontFamily">@font/easyjet_rounded_ff</item>
    </style>

    <style name="EasyJetAppWidgetFont" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/easyjet_rounded_ff</item>
    </style>

    <style name="EasyJetTitle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">#FF6600</item>
        <item name="android:fontFamily">@font/easyjet_rounded_ff</item>
        <item name="android:textStyle">bold</item>
    </style>
