<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="CTDayNightTheme" />

    <style name="ClientAppTheme" parent="AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/ct_black</item>

        <item name="colorSecondary">@color/genericPrimary</item>
        <item name="colorOnSecondary">@color/ct_white</item>

        <item name="colorControlNormal">@color/ct_white</item>

        <item name="android:statusBarColor">#991E1E1E</item>

        <item name="searchViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- SearchView -->
    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="queryHint">@string/search_hint</item>
        <item name="queryBackground">@android:color/transparent</item>
        <item name="closeIcon">@drawable/ct_close_black_24dp</item>
        <item name="searchHintIcon">@null</item>
    </style>

    <style name="CTSingleCarWrapper">
        <item name="android:background">?android:colorBackground</item>
    </style>

    <style name="CTBestPriceCTAText">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
